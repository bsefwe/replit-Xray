{
	auto_https off
}
:{$PORT} {
	encode zstd gzip
	@path path {/{$UUID}-vless} {/{$UUID}D-trojan} {/{$UUID}-vmess}
	handle @path {
		reverse_proxy :4000 {
			@error status 5xx 4xx
			handle_response @error {
				error 404
			}
		}
	}
	handle {
		root * ./main/page
		try_files 404
		file_server
		header Cache-Control max-age=31536000
	}
	handle_errors {
		redir * /
	}
}
